<% title "Announcements" %>
<!-- Event card -->
<div class="mdl-grid">
<% @announcements.each do |announcement| %>
  <div class="mdl-cell mdl-cell--12-col" >
    <div class="demo-card-event mdl-card mdl-shadow--16dp" >
      <div class="mdl-card__title mdl-card--expand">
        <h4>
          <%=announcement.title %>
        </h4>
      </div>
      <div class="mdl-card__actions mdl-card--border">
        <%= link_to "View", announcement, :class => 'mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect' %>
        <div class="mdl-layout-spacer"></div>
        <i class="material-icons">speaker_notes</i>
      </div>
    </div>
  </div>
<% end %>
</div>

